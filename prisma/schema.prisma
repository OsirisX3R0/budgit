datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

model pay_schedule {
  id            Int           @id @default(autoincrement()) @db.Integer
  frequency     frequency     @default(monthly)
  amount        Float
  day_of_week   Int?
  day_of_month  day_of_month?
  day           Int?
  next_due_date DateTime?
  first_date    Int?
  second_date   Int?
}

model biller {
  id             Int              @id @default(autoincrement()) @db.Integer
  name           String           @db.VarChar
  category       biller_category?
  frequency      frequency        @default(monthly)
  next_due_date  DateTime?
  default_amount Float?
  payments       payment[]
}

model payday {
  id       Int       @id @default(autoincrement()) @db.Integer
  day      Int
  month    Int
  year     Int
  amount   Float
  payments payment[]
}

model payment {
  id        Int    @id @default(autoincrement()) @db.Integer
  month     Int
  year      Int
  amount    Float
  biller_id Int
  payday_id Int
  biller    biller @relation(fields: [biller_id], references: [id])
  payday    payday @relation(fields: [payday_id], references: [id])
}

enum frequency {
  onetime
  weekly
  biweekly
  semimonthly
  monthly
}

enum day_of_month {
  firstbusiness
  lastbusiness
  firstfriday
  lastfriday
  secondwed
  thirdwed
  fourthwed
  specific
}

enum biller_category {
  Electricity
  Water
  Gas
  Phone
  Internet
  Auto
}
